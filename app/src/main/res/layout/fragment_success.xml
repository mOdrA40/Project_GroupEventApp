<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.profile.SuccessFragment">

    <!-- Title: Profile Updated -->
    <TextView
        android:id="@+id/tv_profile_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Updated"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Subtitle: Success! -->
    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_updated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sample_profile"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name and Email -->
    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aisyah Putri"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aisyah.putri@example.com"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Go to Profile Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Profile"
        android:backgroundTint="@color/button_background"
        app:cornerRadius="12dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:backgroundTint="@color/light_gray"
        app:cornerRadius="12dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_go_to_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Support Text -->
    <TextView
        android:id="@+id/tv_support_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your changes have been saved securely. If you need any assistance, please contact our support team. We are here to help you with any issues or questions you may have."
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_go_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
